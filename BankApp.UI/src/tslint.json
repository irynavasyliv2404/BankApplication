{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "padding-line-between-statements": [
          "error",
          { "blankLine": "always", "prev": "function", "next": "function" }
        ],
        "tir-newline-after-import": [true, "never"],
        "tir-spaces-within-import": [true]
      }
}
